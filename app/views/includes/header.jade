.container
    .row
        .page-header
            h1= title
            small 重度科幻迷
.navbar.navbar-default.navbar-fixed-bottom
    .container
        .navbar-header
            a.navbar-brand(href="/") 重度科幻迷
        if user
            p.navbar-text.navbar-right
                span Welcome,#{user.name}
                span &nbsp;|&nbsp;
                a.navbar-link(href="/logout") 登出
        else
            p.navbar-text.navbar-right
                a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") 註冊
                span &nbsp;|&nbsp;
                a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登入
#signupModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST", action="/signup")
                .modal-header 註冊
                .modal-body
                    .form-group
                        label(form="signupName") 用戶名
                        input#signupName.form-control(name="user[name]", type="text")
                    .form-group
                        label(form="signupPassword") 用戶名
                        input#signupPassword.form-control(name="user[password]", type="password")
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") Close
                    button.btn.btn-success(type="submit") Submit
#signinModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST", action="/signin")
                .modal-header 登入
                .modal-body
                    .form-group
                        label(form="signinName") 用戶名
                        input#signinName.form-control(name="user[name]", type="text")
                    .form-group
                        label(form="signinPassword") 用戶名
                        input#signinPassword.form-control(name="user[password]", type="password")
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") Close
                    button.btn.btn-success(type="submit") Submit